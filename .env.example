# Reddit OAuth Configuration
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_REDIRECT_URI=http://localhost:3000/auth/callback

# YouTube OAuth Configuration (Google Cloud Console)
YOUTUBE_CLIENT_ID=your_google_client_id_here
YOUTUBE_CLIENT_SECRET=your_google_client_secret_here
YOUTUBE_REDIRECT_URI=http://localhost:3000/auth/callback

# Application Settings
PORT=3000
SESSION_SECRET=your_random_session_secret_here

# Development/Production
NODE_ENV=development

# Platform Configuration
# Set to 'false' to disable specific platforms
REDDIT_ENABLED=true
YOUTUBE_ENABLED=true